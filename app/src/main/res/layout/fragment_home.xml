<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:fitsSystemWindows="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:toolbarId="@+id/toolbar"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:contentScrim="#03D8C3">

                <ImageView
                    android:id="@+id/app_bar_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_collapseMode="parallax"

                    android:src="@drawable/search_view_background"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchVocaView"
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        android:layout_marginTop="187dp"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/search_view"
                        android:padding="4dp"
                        app:iconifiedByDefault="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.491"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:queryHint="Find your vocabulary" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="733dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/background_nested_scroll_view"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/translate_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Translate"
                        android:textAlignment="center"
                        android:textColor="@color/secondary"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/nunito_sans_bold"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:layout_margin="20dp"
                        android:columnOrderPreserved="false"
                        android:rowOrderPreserved="false"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/dictionary_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:drawableTop="@drawable/dictionary_icon"
                            android:text="Dictionary"
                            android:textColor="@color/secondary"
                            app:backgroundTint="@android:color/transparent"
                            app:cornerRadius="8dp"
                            app:strokeColor="#80CCCCCC"
                            app:strokeWidth="1dp"
                            android:layout_margin="10dp"
                            android:padding="40dp"
                            android:fontFamily="@font/nunito_sans_semibold"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/camera_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:drawableTop="@drawable/ic_camera_fill"
                            android:drawableTint="@color/primary"
                            android:text="Camera"
                            android:textColor="@color/secondary"
                            app:backgroundTint="@android:color/transparent"
                            app:cornerRadius="8dp"
                            app:strokeColor="#80CCCCCC"
                            app:strokeWidth="1dp"
                            android:layout_margin="10dp"
                            android:padding="40dp"
                            android:fontFamily="@font/nunito_sans_semibold"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/image_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:drawableTop="@drawable/ic_image"
                            android:text="Image"
                            android:textColor="@color/secondary"
                            app:backgroundTint="@android:color/transparent"
                            app:cornerRadius="8dp"
                            app:strokeColor="#80CCCCCC"
                            app:strokeWidth="1dp"
                            android:layout_margin="10dp"
                            android:padding="40dp"
                            android:fontFamily="@font/nunito_sans_semibold"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/chatbot_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:drawableTop="@drawable/ic_chatbot_solid"
                            android:drawableTint="@color/primary"
                            android:text="Dictionary"
                            android:textColor="@color/secondary"
                            app:backgroundTint="@android:color/transparent"
                            app:cornerRadius="8dp"
                            app:strokeColor="#80CCCCCC"
                            app:strokeWidth="1dp"
                            android:layout_margin="10dp"
                            android:padding="40dp"
                            android:fontFamily="@font/nunito_sans_semibold"/>


                    </GridLayout>

                </LinearLayout>

            <LinearLayout
                android:id="@+id/vocabulary_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vocabulary"
                    android:textAlignment="center"
                    android:textColor="@color/secondary"
                    android:textSize="25sp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/nunito_sans_bold"/>

                <Button
                    android:id="@+id/search_his_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="1dp"
                    android:backgroundTint="@color/frame"
                    android:drawableLeft="@drawable/ic_history"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:padding="20dp"
                    android:text="Search history"
                    android:textAlignment="viewStart"
                    android:textColor="@color/grayDark"
                    android:textSize="20sp"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/saved_voca_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="1dp"
                    android:backgroundTint="@color/frame"
                    android:drawableLeft="@drawable/ic_saved"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:padding="20dp"
                    android:text="Saved vocabulary"
                    android:textAlignment="viewStart"
                    android:textColor="@color/grayDark"
                    android:textSize="20sp"
                    app:cornerRadius="10dp"/>

                <Button
                    android:id="@+id/album_voca_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="1dp"
                    android:backgroundTint="@color/frame"
                    android:drawableLeft="@drawable/ic_album"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:padding="20dp"
                    android:text="Album Vocabulary"
                    android:textAlignment="viewStart"
                    android:textColor="@color/grayDark"
                    android:textSize="20sp"
                    app:cornerRadius="10dp"/>
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>

            </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>