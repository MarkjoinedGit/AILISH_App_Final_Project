<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeProfilesFragment">


    <!-- TODO: Update blank fragment layout -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:fitsSystemWindows="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:toolbarId="@+id/toolbar"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:contentScrim="#03D8C3">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="733dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_nested_scroll_view"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_back"
                    android:layout_height="wrap_content">

                </Button>
                <LinearLayout
                    android:id="@+id/vocabulary_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profiles"
                        android:textAlignment="center"
                        android:textColor="@color/secondary"
                        android:textSize="25sp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/nunito_sans_bold"/>
                    <Button
                        android:id="@+id/changeUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="1dp"
                        android:backgroundTint="@color/frame"
                        android:drawableLeft="@drawable/ic_pencil"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:padding="20dp"
                        android:text="Change Username"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grayDark"
                        android:textSize="20sp"
                        app:cornerRadius="10dp" />
                    <Button
                        android:id="@+id/changeNumberPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="1dp"
                        android:backgroundTint="@color/frame"
                        android:drawableLeft="@drawable/ic_pencil"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:padding="20dp"
                        android:text="Change Phone Number"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grayDark"
                        android:textSize="20sp"
                        app:cornerRadius="10dp" />
                    <Button
                        android:id="@+id/changeAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="1dp"
                        android:backgroundTint="@color/frame"
                        android:drawableLeft="@drawable/ic_pencil"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:padding="20dp"
                        android:text="Change Avatar"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grayDark"
                        android:textSize="20sp"
                        app:cornerRadius="10dp" />
                    <Button
                        android:id="@+id/changePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="1dp"
                        android:backgroundTint="@color/frame"
                        android:drawableLeft="@drawable/ic_pencil"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:padding="20dp"
                        android:text="Change Password"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grayDark"
                        android:textSize="20sp"
                        app:cornerRadius="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>